<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewLowPelamar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:elevation="8dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/imageViewLowPelamar"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_margin="5dp"
                android:src="@drawable/low2">
            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewNamaInstansiLow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Nama Instansi"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/textViewNamaPosisiLow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Posisi"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textViewStatusLow"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:text="Status"
                        android:background="@drawable/biru"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp">
                    </TextView>

                    <TextView
                        android:id="@+id/textViewJumlahLow"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:text="7"
                        android:textSize="12dp"
                        android:background="@drawable/hijau"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:drawableStart="@drawable/ic_profile"
                        android:drawableTint="@color/white"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Buka:"
                        android:textSize="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black">
                    </TextView>

                    <TextView
                        android:id="@+id/textViewDurasiLow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13 November 2023 - 17 November 2023"
                        android:textSize="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black">
                    </TextView>

                    <Button
                        android:id="@+id/buttonLihatDetailPelamar"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/orange"
                        android:onClick="btn_lihat_detail_pel_1"
                        android:text="Lihat Detail"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        app:cornerRadius="7dp"
                        android:layout_marginRight="5dp">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



</androidx.cardview.widget.CardView>
