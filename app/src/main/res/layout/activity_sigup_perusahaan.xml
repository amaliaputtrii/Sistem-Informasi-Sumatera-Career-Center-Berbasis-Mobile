<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".MainActivitySigupPerusahaan"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:clickable="true"
            android:onClick="btn_kembali_signin_per"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="Kembali"
            android:textAlignment="inherit"
            android:textColor="@color/orange" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/logosccpcr"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="Daftar Sekarang"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputNamaPerusahaan"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Masukkan Nama Perusahaan"
                        android:textSize="15dp"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputEmailPerusahaan"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Masukkan Email Perusahaan"
                        android:textSize="15dp"
                        android:inputType="textEmailAddress"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputPassPerusahaan"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Masukkan Kata Sandi"
                        android:textSize="15dp"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputKonfPassPerusahaan"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="15dp"
                        android:hint="Verifikasi Kata Sandi"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logo Perusahaan"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="inherit"
                    android:textColor="@color/black">
                </TextView>

                <ImageView
                    android:id="@+id/uploadLogo"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_upload"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/hijau"
                    android:layout_gravity="center_horizontal">
                </ImageView>

                <Button
                    android:id="@+id/uploadLogoPer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Logo"
                    android:textSize="15sp"
                    android:textColor="@color/orange"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/white">
                </Button>

                <Button
                    android:id="@+id/btnregisper"
                    android:onClick="btn_masuk_login_per"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="Daftar"
                    android:backgroundTint="@color/hijau"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    app:cornerRadius="7dp"
                    android:layout_marginTop="40dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="Sudah punya akun ?"
                        android:textAlignment="center"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text=" Masuk"
                        android:textAlignment="center"
                        android:clickable="true"
                        android:onClick="btn_masuk_lagi_per"
                        android:textColor="@color/orange"/>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
